{
  "manifest_version": 3,
  "name": "Memento",
  "version": "1.0",
  "description": "A Chrome extension with full onboarding page",
  "permissions": ["sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16x16.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    },
    "default_title": "Memento"
  },
  "web_accessible_resources": [
    {
      "resources": ["onboarding.html", "onboarding.js", "static/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "side_panel": {
    "default_path": "index.html"
  }
}

